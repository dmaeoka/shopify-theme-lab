<!-- shopify/snippets/layout-blog-article.liquid -->
<div class="w-full lg:w-1/2 px-3 mb-12 lg:mb-6">
	<div class="relative">
		<div class="hidden md:block absolute z-10 bottom-0 right-0 mr-12 mb-6 lg:mb-12">
			<span class="inline-block mr-4 font-bold font-heading text-blue-300 uppercase">{{ article.published_at | date: format: 'month_day_year' }}</span>
			<a class="inline-block px-4 md:px-8 py-2 bg-white rounded-md font-bold font-heading text-gray-400 hover:text-orange-300 uppercase tracking-widest" href="#">Summer</a>
		</div>
		<a class="group flex flex-wrap lg:h-80 items-center bg-gray-50" href="{{ article.url }}">
			<div class="w-full lg:w-1/3 h-full">
				<img class="h-64 md:h-full w-full object-cover" src="https://picsum.photos/200/300" alt="">
			</div>
			<div class="relative w-full lg:w-2/3 lg:h-80">
				<div class="hidden lg:block absolute top-0 left-0 ml-12 w-44 py-px bg-blue-300 group-hover:bg-orange-300"></div>
				<div class="lg:hidden absolute bottom-0 left-0 ml-12 w-44 py-px bg-blue-300 group-hover:bg-orange-300"></div>
				<div class="flex h-full pt-12 md:pt-16 pb-12 md:pb-20 px-6 md:px-12">
					<div class="lg:max-w-xs">
						{% if article.title %}
						<h3 class="text-2xl font-bold font-heading">{{ article.title }}</h3>
						{% endif %}
						<span class="md:hidden mt-6 inline-block font-bold font-heading text-blue-300 uppercase">{{ article.published_at | date: format: 'month_day_year' }}</span>
					</div>
				</div>
			</div>
		</a>
	</div>
</div>

<div class="hidden {{ class | default: '' }}" style="{{ style | default: '' }}">
	{% if article.title %}
		<a href="{{ article.url }}">{{ article.title }}</a>
	{% endif %}

	{% if article.author %}{{ 'common.by' | t }} {{ article.author }} / {% endif %}

	<div class="flex-1 mb-6">
		{% if article.excerpt.size > 0 %}
			{{ article.excerpt }}
		{% else %}
			{{ article.content | strip_html | truncate: 150 }}
		{% endif %}
	</div>

	<div>
		<a href="{{ article.url }}" class="button button-secondary">
			{{ 'action.read_more' | t }}
		</a>
	</div>
</div>
