<!-- shopify/snippets/layout-social.liquid -->
<div class="flex space-x-3 {{ class | default: '' }}" style="{{ style | default: '' }}">
	{% assign link_class = 'w-6 h-auto text-gray-600 hover:text-black transition duration-150' %}
	{% assign icon_class = 'w-full h-auto' %}

	{% if social_instagram_visible %}
		<a class="inline-flex items-center justify-center w-12 h-12 mr-2 bg-indigo-300 rounded-full" href="{{ social_instagram_link }}" target="_blank" aria-label="Instagram">
			<img src="{{ 'instagram-circle.static.svg' | asset_url }}" alt="">
			{% render 'icon', icon: 'social-instagram', class: icon_class %}
		</a>
	{% endif %}

	{% if social_twitter_visible %}
		<a class="inline-flex items-center justify-center w-12 h-12 bg-blue-300 rounded-full" href="{{ social_twitter_link }}" target="_blank" aria-label="Twitter">
			<img src="{{ 'twitter-circle.static.svg' | asset_url }}" alt="">
			{% render 'icon', icon: 'social-twitter', class: icon_class %}
		</a>
	{% endif %}

	{% if social_facebook_visible %}
		<a class="inline-flex items-center justify-center w-12 h-12 mr-2 bg-blue-500 rounded-full" href="{{ social_facebook_link }}" target="_blank" aria-label="Facebook">
			<img src="{{ 'facebook-circle.static.svg' | asset_url }}" alt="">
			{% render 'icon', icon: 'social-facebook', class: icon_class %}
		</a>
	{% endif %}

	{% if social_youtube_visible %}
		<a class="inline-flex items-center justify-center w-12 h-12 mr-2 bg-blue-500 rounded-full" href="{{ social_youtube_link }}" target="_blank" aria-label="Youtube">
			{% render 'icon', icon: 'social-youtube', class: icon_class %}
		</a>
	{% endif %}
</div>
