<!-- shopify/sections/section-hero.liquid -->
{% assign image = section.settings.image %}

<section class="bg-blue-50 bg-opacity-30" x-data>
	<div class="relative container mx-auto px-4">
		<div class="flex flex-wrap -mx-4">
			<div class="w-full md:w-1/2 px-4 mb-12 lg:mb-0 pt-20 lg:py-32">
				<div class="max-w-md">
					<h2 class="mb-8 text-5xl lg:text-6xl font-semibold font-heading">{{ section.settings.headline }}</h2>
					<p class="mb-20 text-lg text-gray-600">{{ section.settings.text }}</p>
					<a class="inline-block bg-orange-300 hover:bg-orange-400 text-white font-bold font-heading py-6 px-8 rounded-md uppercase transition duration-200" href="{{ section.settings.button-url }}">{{ section.settings.button-text }}</a>
				</div>
			</div>
			<div class="relative w-full md:w-1/2 px-4 mb-12 lg:mb-0">
				<div class="hidden lg:block absolute top-0 transform translate-y-1/2 right-0 w-1"><a class="block w-1/2 h-40 bg-blue-600" href="#"></a><a class="block w-1/2 h-40 bg-gray-300" href="#"></a></div>
				<div class="absolute bottom-1/2 -mb-24 lg:right-6 inline-block bg-white rounded-lg">
					<div class="flex p-3">
						<div class="w-auto pt-5 px-4 lg:px-9">
							<h3 class="mb-2 text-xl font-bold font-heading w-32">Gym set V1G in&nbsp;colors</h3>
							<p class="mb-4 lg:mb-0 text-lg font-semibold font-heading text-blue-500">$14.30</p>
							<a class="lg:absolute bottom-0 flex items-center justify-center w-12 h-12 lg:-mb-6 bg-orange-300 hover:bg-orange-400 text-white rounded-md" href="#">
								<svg class="w-2 h-4" width="8" height="12" viewBox="0 0 8 12" fill="none" xmlns="http://www.w3.org/2000/svg">
									<path d="M4.97656 6.00252L0.851562 1.87752L2.02957 0.699219L7.33258 6.00252L2.02957 11.3058L0.851562 10.1275L4.97656 6.00252Z" fill="white"></path>
								</svg>
							</a>
						</div>
						<div class="w-auto">
							<img class="h-full lg:h-36 rounded-xl object-cover" src="https://picsum.photos/138/154" alt="">
						</div>
					</div>
				</div>
				{% if image %}
					<img
						sizes="
							(min-width: 1280px) 1500px,
							(min-width: 1024px) 1250px,
							(min-width: 768px) 1000px,
							(min-width: 640px) 720px,
							600px
						"
						srcset="
							{{ image | img_url: '600x' }} 600w,
							{{ image | img_url: '720x' }} 720w,
							{{ image | img_url: '1000x' }} 1000w,
							{{ image | img_url: '1250x' }} 1250w,
							{{ image | img_url: '1500x' }} 1500w
						"
						src="{{ image | img_url: '1500x' }}"
						src-placeholder="{{	image | img_url: '50x' }}"
						alt="{{ image.alt }}"
						loading="lazy"
						class="mx-auto h-96 lg:h-auto"
					>
				{% else %}
					<!-- {{ 'lifestyle-1' | placeholder_svg_tag: 'mx-auto h-96 lg:h-auto' }} -->
					<img class="mx-auto h-96 lg:h-auto" src="https://picsum.photos/608/880" alt="">
				{% endif %}
			</div>
		</div>
		<div class="w-full lg:w-5/6 xl:absolute left-0 bottom-0 right-0 bg-white py-12 px-8 lg:ml-auto">
			<div class="flex flex-wrap items-center justify-center -mx-2 -mb-12">
				<div class="w-1/2 md:w-1/3 lg:w-1/6 px-2 mb-12">
					<img class="mx-auto h-6" src="{{ 'exxon.static.svg' | asset_url }}" alt="">
				</div>
				<div class="w-1/2 md:w-1/3 lg:w-1/6 px-2 mb-12">
					<img class="mx-auto h-6" src="{{ 'ea-sports.static.svg' | asset_url }}" alt="">
				</div>
				<div class="w-1/2 md:w-1/3 lg:w-1/6 px-2 mb-12">
					<img class="mx-auto h-6" src="{{ 'eurosport.static.svg' | asset_url }}" alt="">
				</div>
				<div class="w-1/2 md:w-1/3 lg:w-1/6 px-2 mb-12">
					<img class="mx-auto h-6" src="{{ 'nike.static.svg' | asset_url }}" alt="">
				</div>
				<div class="w-1/2 md:w-1/3 lg:w-1/6 px-2 mb-12">
					<img class="mx-auto h-6" src="{{ 'aol.static.svg' | asset_url }}" alt="">
				</div>
				<div class="w-1/2 md:w-1/3 lg:w-1/6 px-2 mb-12">
					<img class="mx-auto h-6" src="{{ 'north-face.static.svg' | asset_url }}" alt="">
				</div>
			</div>
		</div>
	</div>
</section>

{% schema %}
{
	"name": "t:sections.hero.name",
	"class": "shopify-section-vue",
	"settings": [
		{
			"type": "image_picker",
			"id": "image",
			"label": "t:common.image"
		},
		{
			"type": "text",
			"id": "headline",
			"label": "t:common.headline",
			"default": "Get 10% off site-wide when you spend $30 with code: new"
		},
		{
			"type": "textarea",
			"id": "text",
			"label": "t:common.text",
			"default": "Discover more products and inspiration."
		},
		{
			"type": "url",
			"id": "button-url",
			"label": "t:common.button.url"
		},
		{
			"type": "text",
			"id": "button-text",
			"label": "t:common.button.text",
			"default": "Shop Now"
		}
	],
	"presets": [
		{
			"name": "t:sections.hero.name",
			"category": "Image"
		}
	]
}
{% endschema %}
