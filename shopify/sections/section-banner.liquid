<!-- shopify/sections/section-banner.liquid -->
{% assign image = section.settings.image %}

<section class="relative overflow-x-hidden" x-data="banner">
	<div class="container mx-auto px-4">
		<div class="flex flex-wrap items-center">
			<div class="w-full md:w-1/2 lg:w-2/5 md:h-128 md:pr-8 mb-20 md:mb-0">
				<div class="pt-20 max-w-md">
					<span class="mb-4 text-2xl">{{ section.settings.tagline }}</span>
					<h2 class="mt-6 mb-16 lg:mb-32 text-5xl font-bold font-heading">{{ section.settings.headline }}</h2>
					<a class="inline-block bg-orange-300 hover:bg-orange-400 text-white font-bold font-heading py-6 px-8 rounded-md uppercase transition duration-200" href="{{ section.settings.button-url }}">{{ section.settings.button-text }}</a>
				</div>
			</div>
			<div class="w-full h-64 md:h-128 md:w-1/2 lg:w-3/5">
				{% if image %}
					<img
						sizes="
							(min-width: 1536px) 1000px,
							(min-width: 1280px) 850px,
							(min-width: 1024px) 700px,
							(min-width: 768px) 400px,
							(min-width: 640px) 500px,
							600px
						"
						srcset="
							{{ image | img_url: '400x' }} 400w,
							{{ image | img_url: '500x' }} 500w,
							{{ image | img_url: '600x' }} 600w,
							{{ image | img_url: '700x' }} 700w,
							{{ image | img_url: '850x' }} 850w,
							{{ image | img_url: '1000x' }} 1000w
						"
						src="{{ image | img_url: '1000x' }}"
						src-placeholder="{{	image | img_url: '50x' }}"
						alt="{{ image.alt }}"
						loading="lazy"
						class="h-full w-full md:w-auto max-w-none object-cover"
					>
				{% else %}
					<img class="h-full w-full md:w-auto max-w-none object-cover" src="https://picsum.photos/970/512" alt="" loading="lazy">
				{% endif %}
			</div>
		</div>
	</div>
</section>

{% schema %}
{
	"name": "t:sections.banner.name",
	"class": "shopify-section-vue",
	"settings": [
		{
			"type": "image_picker",
			"id": "image",
			"label": "t:common.image"
		},
		{
			"type": "text",
			"id": "tagline",
			"label": "t:common.tagline",
			"default": "More ideas"
		},
		{
			"type": "text",
			"id": "headline",
			"label": "t:common.headline",
			"default": "Featured styles. Check it now."
		},
		{
			"type": "textarea",
			"id": "text",
			"label": "t:common.text",
			"default": "Lorem ipsum dolor sit amet consectetur adipisicing elit. Iste quos hic praesentium recusandae dolores odio animi deleniti officia cum itaque."
		},
		{
			"type": "url",
			"id": "button-url",
			"label": "t:common.button.url"
		},
		{
			"type": "text",
			"id": "button-text",
			"label": "t:common.button.text",
			"default": "More"
		}
	],
	"presets": [
		{
			"name": "t:sections.banner.name",
			"category": "Image"
		}
	]
}
{% endschema %}
