{% layout 'no-header' %}

<section class="relative overflow-x-hidden">
	<div class="container px-4 mx-auto">
		<div class="flex flex-wrap items-center">
			<div class="w-full lg:w-2/6 px-4 mb-12 lg:mb-0">
				<div class="py-20 text-center">
					<a class="inline-block mb-14 text-3xl font-bold font-heading" href="{{ routes.root_url }}">
						<img class="h-9" src="{{ 'yofte-logo.static.svg' | asset_url }}" alt="" width="125" height="36" loading="lazy">
					</a>
					<h3 class="mb-8 text-4xl md:text-5xl font-bold font-heading">{{ shop.name }}</h3>
					<p class="mb-10">{{ 'password.coming_soon' | t }}</p>
					{% form 'storefront_password' %}
						{% if form.errors %}
							{% capture error_text %}
								{{ form.errors | default_errors }}
							{% endcapture %}

							{% render 'layout-message',
								type: 'error'
								text: error_text
								class: 'mb-8'
							%}
						{% endif %}

						<div class="mb-4">
							<label for="CustomerEmail" class="sr-only">{{ 'form.email' | t }}</label>
							<input class="w-full px-12 py-6 border border-gray-200 focus:ring-blue-300 focus:border-blue-300 rounded-md" type="email" placeholder="{{ 'form.password' | t }}" id="Password" name="password" required>
						</div>

						<div class="mt-12 md:mt-16 flex flex-wrap gap-4 sm:gap-6 justify-center">
							<button type="submit" class="bg-blue-800 hover:bg-blue-900 text-white font-bold font-heading py-5 px-8 rounded-md uppercase">{{ 'action.sign_in' | t }}</button>
							<div class="w-full sm:w-auto flex justify-center items-center">
								<span>{{ 'password.store_owner' | t }}&nbsp;</span>
								<a href="/admin" class="underline">{{ 'action.log_in' | t }}</a>
							</div>
						</div>
					{% endform %}
				</div>
				<img class="lg:hidden h-96 w-full object-cover" src="https://picsum.photos/1240" alt="" loading="lazy" width="1240" height="1240">
			</div>
		</div>
	</div>
	<div class="hidden lg:block lg:absolute top-0 bottom-0 right-0 lg:w-3/6 bg-center bg-cover bg-no-repeat" style="background-image: url('https://picsum.photos/1240');"></div>
</section>
