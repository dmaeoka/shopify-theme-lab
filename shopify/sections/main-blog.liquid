<!-- shopify/sections/main-blog.liquid -->
<section class="py-20 bg-blue-50 bg-opacity-30 overflow-x-hidden" x-data>
	<div class="container mx-auto px-4">
		<h1 class="mb-16 md:mb-24 text-4xl md:text-5xl font-bold font-heading">{{ blog.title }}</h1>
		{% paginate blog.articles by 8 %}
			<div class="flex flex-wrap -mx-3 mb-20">
				{% for article in blog.articles %}
					{% render 'layout-blog-article',
						article: article %}
				{% endfor %}
			</div>
			<div class="text-center"><a class="inline-block bg-orange-300 text-white font-bold font-heading py-5 px-8 rounded-md uppercase" href="#">Show More</a></div>
			{% render 'layout-pagination', paginate: paginate %}
		{% endpaginate %}
	</div>
</section>

{% schema %}
{
	"name": "Main blog",
	"class": "shopify-section-vue"
}
{% endschema %}
