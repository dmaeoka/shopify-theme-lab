<!-- shopify/sections/main-404.liquid -->
<section class="overflow-x-hidden" x-data>
	<div class="py-10 bg-white">
		<div class="container mx-auto px-4">
			<a class="text-3xl font-bold font-heading" href="{{ routes.root_url }}">
				<img class="h-9" src="{{ 'yofte-logo.static.svg' | asset_url }}" alt="" width="auto">
			</a>
		</div>
	</div>
	<div class="relative py-20 md:py-40 bg-blue-800" style="background-image: url({{ 'lines-color4.static.svg' | asset_url }}); background-size: cover;" alt="">
		<div class="container mx-auto px-4">
			<div class="flex flex-wrap items-center -mx-4">
				<div class="w-full md:w-1/2 px-4">
					<img class="w-4/5 mx-auto object-contain" src="https://picsum.photos/486/663" alt="">
				</div>
				<div class="w-full md:w-1/2 px-4 text-center md:text-left">
					<span class="font-bold font-heading text-white" style="font-size: 126px;">{{ "404.title" | t }}</span>
					<h2 class="mt-3 mb-12 text-3xl text-white font-bold font-heading">{{ "404.text" | t }}</h2>
					<div class="flex flex-wrap items-center justify-start">
						<p class="mb-12 lg:mb-0 mr-8 w-full md:w-auto text-white text-center md:text-left">{{ "404.misspelling" | t }}</p>
						<a class="inline-block w-full md:w-auto text-center bg-orange-300 hover:bg-orange-400 text-white font-bold font-heading py-5 px-8 rounded-md uppercase" href="{{ routes.root_url }}">{{ "action.continue_shopping" | t }} </a>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

{% schema %}
{
	"name": "Main 404",
	"class": "shopify-section-vue"
}
{% endschema %}
